<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create Channel</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="css/signInPage.css" />
    <script
      src="https://kit.fontawesome.com/33891a6c3e.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <header class="navbarNew">
      <a href="/landing" style="text-decoration: none; color: antiquewhite">
        <div style="display: flex">
          <img src="img/logo.png" alt="" class="logo" />
          <h2 style="font-size: 2rem; margin: auto">StudentSphere</h2>
          <h2 style="font-size: 2rem; margin: auto 10px auto"><%= name %></h2>
        </div>
      </a>
      <nav>
        <div style="display: flex; align-items: center">
          <div class="createBtn" style="cursor: pointer">
            <a
              href="/createChannel"
              style="text-decoration: none; color: antiquewhite"
              >Create Channel</a
            >
          </div>
          <div class="dp" style="background-color: black">
            <img
              src="img/google.png"
              alt=""
              class="profilePic"
              id="dpImage"
              onclick="toggleDropdown()"
            />
            <div class="dropdown" id="dpDropdown">
              <ul>
                <li><a href="/myChannels">My Communities</a></li>
                <li><a href="/logout">Logout</a></li>
              </ul>
            </div>
          </div>
        </div>
      </nav>
    </header>
    <div
      class="container-fluid"
      style="display: flex; justify-content: center; align-items: center"
    >
      <form action="/submit" class="formNew" method="POST">
        <div class="ele">
          <label for="channelName">Channel Name:</label>
          <input
            type="text"
            id="channelName"
            class="form-control"
            name="channelName"
          />
        </div>
        <div class="ele">
          <label for="channelName">Channel Link:</label>
          <input
            type="text"
            id="channelLink"
            class="form-control"
            name="channelLink"
          />
        </div>

        <div class="mb-3 ele">
          <label for="description" class="form-label">Description:</label>
          <textarea
            class="form-control"
            id="description"
            rows="3"
            name="description"
          ></textarea>
        </div>
        <div style="display: flex" class="ele">
          <label for="tagu">Tags:</label>
          <div class="form-check" id="tagu">
            <input
              class="form-check-input"
              type="checkbox"
              value="1"
              id="Music"
              name="tags[]"
            />
            <label class="form-check-label" for="Music"> Music</label>
          </div>
          <div class="form-check">
            <input
              class="form-check-input"
              type="checkbox"
              value="2"
              id="Gaming"
              name="tags[]"
            />
            <label class="form-check-label" for="Gaming"> Gaming</label>
          </div>
          <div class="form-check">
            <input
              class="form-check-input"
              type="checkbox"
              value="3"
              id="Sports"
              name="tags[]"
            />
            <label class="form-check-label" for="Sports"> Sports</label>
          </div>
          <div class="form-check">
            <input
              class="form-check-input"
              type="checkbox"
              value="4"
              id="Maths"
              name="tags[]"
            />
            <label class="form-check-label" for="Maths"> Maths</label>
          </div>
          <div class="form-check">
            <input
              class="form-check-input"
              type="checkbox"
              value="5"
              id="Literature"
              name="tags[]"
            />
            <label class="form-check-label" for="Literature"> Literature</label>
          </div>
          <div class="form-check">
            <input
              class="form-check-input"
              type="checkbox"
              value="6"
              id="Movies"
              name="tags[]"
            />
            <label class="form-check-label" for="Movies"> Movies</label>
          </div>
          <div class="form-check">
            <input
              class="form-check-input"
              type="checkbox"
              value="7"
              id="Photography"
              name="tags[]"
            />
            <label class="form-check-label" for="Photography">
              Photography</label
            >
          </div>
          <div class="form-check">
            <input
              class="form-check-input"
              type="checkbox"
              value="8"
              id="Dance"
              name="tags[]"
            />
            <label class="form-check-label" for="Dance"> Dance</label>
          </div>
          <div class="form-check">
            <input
              class="form-check-input"
              type="checkbox"
              value="9"
              id="Quiz"
              name="tags[]"
            />
            <label class="form-check-label" for="Quiz"> Quiz</label>
          </div>
          <div class="form-check">
            <input
              class="form-check-input"
              type="checkbox"
              value="10"
              id="Others"
              name="tags[]"
            />
            <label class="form-check-label" for="Cooking"> Others</label>
          </div>
        </div>
        <div class="ele">
          <label for="status">Status:</label>
          <input
            type="text"
            id="status"
            class="form-control"
            name="status"
            placeholder="Open/Closed"
          />
        </div>
        <div class="ele">
          <label for="phoneNum">Phone No. :</label>
          <input
            type="text"
            id="phoneNum"
            class="form-control"
            name="phoneNum"
          />
        </div>
        <div class="submit-btn">
          <input type="submit" value="Submit" />
        </div>
      </form>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
    <script>
      function toggleDropdown() {
        const dpDropdown = document.getElementById("dpDropdown");
        dpDropdown.parentElement.classList.toggle("active");
      }

      // Close the dropdown if user clicks outside of it
      document.addEventListener("click", function (event) {
        const dpImage = document.getElementById("dpImage");
        const dpDropdown = document.getElementById("dpDropdown");
        if (
          !dpImage.contains(event.target) &&
          !dpDropdown.contains(event.target)
        ) {
          dpDropdown.parentElement.classList.remove("active");
        }
      });
    </script>
  </body>
</html>
