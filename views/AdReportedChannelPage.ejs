<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Reported Channels</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/studentCommunityPage.css" />
    <script
      src="https://kit.fontawesome.com/33891a6c3e.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <header class="navbarNew">
      <a href="/AdminPage" style="text-decoration: none; color: antiquewhite">
        <div style="display: flex">
          <img src="/img/logo.png" alt="" class="logo" />
          <h2 style="font-size: 2rem; margin: auto">StudentSphere - Admin</h2>
        </div>
      </a>
      <nav>
        <div style="display: flex; align-items: center">
          <div class="createBtn" id="createBtn" style="cursor: pointer">
            <!-- <div
              style="
                background-color: red;
                border-radius: 50%;
                height: 20px;
                width: 20px;
                position: absolute;
                top: 3px;
                right: 59px;
                display: flex;
                justify-content: center;
                align-items: center;
                font-size: 1rem;
                font-weight: 600;
              "
            >
              2
            </div> -->
            <a
              href="/reportedChannelPage"
              style="text-decoration: none; color: antiquewhite"
              >Reported Channel</a
            >
          </div>
          <div class="dp">
            <img
              src="img/google.png"
              alt=""
              class="profilePic"
              id="dpImage"
              onclick="toggleDropdown()"
            />
            <div class="dropdown" id="dpDropdown">
              <ul>
                <li><a href="/logout">Logout</a></li>
              </ul>
            </div>
          </div>
        </div>
      </nav>
    </header>
    <div class="container-fluid">
      <div class="heading">Reported Channels</div>
      <div class="interestHolder">
        <% for(let i=0;i < result.length;i++) { %> <% const today = new
        Date(result[i]['create_date']); %> <% const day = today.getUTCDate(); %>
        <% const month = today.getUTCMonth() + 1; %> <% const year =
        today.getUTCFullYear(); %>
        <div class="interest">
          <div class="dpAndName">
            <div class="dp dpnew" style="background-color: rgb(98, 179, 179)">
              <img src="/img/google.png" alt="" class="profilePic" />
            </div>
            <h3
              class="channelName"
              style="
                font-family: 'Raleway';
                font-weight: 600;
                font-size: xx-large;
              "
            >
              <%= result[i]['title'] %>
            </h3>
          </div>
          <div class="dateAndBtn">
            <h4
              class="date"
              style="
                font-family: 'Poiret One';
                font-weight: 900;
                font-size: x-large;
              "
            >
              <%= day %>-<%= month %>-<%= year %>
            </h4>
            <a
              href="/AdminPage/<%= result[i]['id'] %>"
              style="text-decoration: none"
            >
              <div class="showBtn">
                <i
                  class="fa-solid fa-arrow-right fa-2xl"
                  style="color: #4f4f4f"
                ></i>
              </div>
            </a>
          </div>
        </div>
        <% } %>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
    <script>
      function toggleDropdown() {
        const dpDropdown = document.getElementById("dpDropdown");
        dpDropdown.parentElement.classList.toggle("active");
      }

      // Close the dropdown if user clicks outside of it
      document.addEventListener("click", function (event) {
        const dpImage = document.getElementById("dpImage");
        const dpDropdown = document.getElementById("dpDropdown");
        if (
          !dpImage.contains(event.target) &&
          !dpDropdown.contains(event.target)
        ) {
          dpDropdown.parentElement.classList.remove("active");
        }
      });
    </script>
  </body>
</html>
